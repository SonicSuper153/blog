<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>Home - <%= siteName %>
        </title>
</head>

<body class="bg-light">
    <%- include('partials/nav') %>
        <div class="container mt-4">
            <div class="mb-4 d-flex align-items-center gap-2">
            <label for="sortDropdown" class="form-label fw-bold mb-0">
                Sort by:
            </label>

            <select class="form-select w-auto" id="sortDropdown" onchange="handleSort(this)">
                <option value="desc" <% if (!locals.sortBy || locals.sortBy === 'desc') { %>selected<% } %>>
                    Latest First
                </option>
                <option value="asc" <% if (locals.sortBy === 'asc') { %>selected<% } %>>
                    Oldest First
                </option>
            </select>
        </div>
            <% if (locals.blogs && blogs.length> 0) { %>
                <div class="row g-4">
                    <% blogs.forEach(blog=> { %>
                        <div class="col-md-4">
                            <div class="card h-100 shadow-sm blog-card">
                                <img src="<%= blog.featured_image 
                                ? (blog.featured_image.startsWith('http') 
                                    ? blog.featured_image 
                                    : '/uploads/' + blog.featured_image) 
                                : 'https://images.unsplash.com/photo-1499750310107-5fef28a66643' %>"
                                    class="card-img-top" alt="<%= blog.title %>"
                                    style="height: 250px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= blog.title %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        By <%= blog.author ? (locals.user && blog.user_id===locals.user.id ? 'you' :
                                            blog.author.username) : 'Anonymous' %>
                                    </h6>
                                    <p class="card-text">

                                        <%= blog.content.substring(0, 120) %>...
                                    </p>
                                    <div class="mt-auto d-grid gap-2">
                                        <a href="/blogs/view/<%= blog.id %>" class="btn btn-primary">
                                            Read More
                                        </a>
                                        <!-- <% if (locals.user && user.id===blog.user_id) { %>
                                            <div class="d-flex gap-2">
                                                <a href="/blogs/edit/<%= blog.id %>"
                                                    class="btn btn-warning flex-grow-1">
                                                    Edit
                                                </a>
                                                <form action="/blogs/delete/<%= blog.id %>" method="POST"
                                                    class="flex-grow-1">
                                                    <button type="submit" class="btn btn-danger w-100"
                                                        onclick="return confirm('Are you sure you want to delete this post?')">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                            <% } %> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <h3 class="text-muted">No blog posts found yet.</h3>
                        <% if (locals.user) { %>
                            <a href="/blogs/add" class="btn btn-primary mt-3">
                                Be the first to write one!
                            </a>
                            <% } %>
                    </div>
                    <% } %>
        </div>

        <script>
            function handleSort(selectElement) {
                const sortValue = selectElement.value;
                const url = sortValue ? `/blogs/sort?sortBy=${sortValue}` : '/';
                window.location.href = url;
            }
        </script>

        <%- include('partials/scripts') %>
</body>

</html>