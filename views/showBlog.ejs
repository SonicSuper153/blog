<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>
            <%= blog.title %> - <%= siteName %>
        </title>
        <style>
            .blog-header {
                padding: 60px 0;
                background: #f8f9fa;
                border-bottom: 1px solid #eee;
                margin-bottom: 40px;
            }

            .blog-content {
                font-size: 1.2rem;
                line-height: 1.8;
                color: #333;
                max-width: 800px;
                margin: 0 auto;
            }

            .featured-image {
                display: block;
                margin: 0 auto 30px auto;
                width: 75%;
                object-fit: contain;
                border-radius: 15px;
            }
        </style>
</head>

<body>
    <%- include('partials/nav') %>

        <article>
            <header class="blog-header">
                <div class="container text-center">
                    <h1 class="display-3 fw-bold">
                        <%= blog.title %>
                    </h1>
                    <p class="text-muted mt-3">
                        By <%= blog.author ? (locals.user && blog.user_id===locals.user.id ? 'you' :
                            blog.author.username) : 'Unknown' %> |
                            Published on <%= new Date(blog.created_at).toLocaleDateString() %>
                    </p>

                </div>
            </header>

            <div class="container mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <img src="<%= blog.featured_image ? (blog.featured_image.startsWith('http') ? blog.featured_image : '/uploads/' + blog.featured_image) : 'https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80' %>"
                            class="featured-image shadow-sm" alt="<%= blog.title %>">

                        <div class="blog-content">
                            <%= blog.content %>
                        </div>


                        <hr class="my-5">

                        <div class="comments-section mb-5">
                            <h3>Comments (<%= blog.Comments ? blog.Comments.length : 0 %>)</h3>
                            <% if (locals.user) { %>
                                <form action="/blogs/comment/<%= blog.id %>" method="POST" class="mt-4 mb-4">
                                    <div class="mb-3">
                                        <textarea class="form-control" name="comment_text" rows="3"
                                            placeholder="Leave a comment..." required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Post Comment</button>
                                </form>
                                <% } else { %>
                                    <p class="text-muted mt-3">Please <a href="/user/signin">sign in</a> to leave a
                                        comment.</p>
                                    <% } %>

                                        <div class="mt-4">
                                            <% if (blog.Comments && blog.Comments.length> 0) { %>
                                                <% blog.Comments.forEach(comment=> { %>
                                                    <div class="card mb-3">
                                                        <div class="card-body">
                                                            <h6 class="card-subtitle mb-2 text-muted">
                                                                <%= comment.User ? comment.User.username : 'Unknown' %>
                                                                    <small class="ms-2">
                                                                        <%= new
                                                                            Date(comment.created_at).toLocaleDateString()
                                                                            %>
                                                                    </small>
                                                            </h6>
                                                            <p class="card-text">
                                                                <%= comment.comment_text %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <p class="text-muted">No comments yet. Be the first to share
                                                                your thoughts!</p>
                                                            <% } %>
                                        </div>
                        </div>

                        <hr class="my-5">

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Home
                            </a>
                            <% if (locals.user && user.id===blog.user_id) { %>
                                <div class="d-flex gap-2">
                                    <a href="/blogs/edit/<%= blog.id %>" class="btn btn-warning">Edit Post</a>
                                    <form action="/blogs/delete/<%= blog.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this post?')">
                                            Delete Post
                                        </button>
                                    </form>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </article>

        <%- include('partials/scripts') %>
</body>

</html>